    "/translateText": {
      "post": {
        "operationId": "TranslationController_translate",
        "parameters": [
          {
            "name": "x-api-key",
            "required": true,
            "in": "header",
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-secret",
            "required": true,
            "in": "header",
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TranslateDto" }
            }
          }
        },
        "responses": { "201": { "description": "" } },
        "summary": "Request string immediate translation",
        "tags": ["Translation"]
      }
    },
    "/queue": {
      "post": {
        "operationId": "TranslationController_queue",
        "parameters": [
          {
            "name": "x-api-key",
            "required": true,
            "in": "header",
            "schema": { "type": "string" }
          },
          {
            "name": "x-api-secret",
            "required": true,
