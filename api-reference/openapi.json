        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TranslateDto" }
            }
          }
        },
        "responses": { "201": { "description": "" } },
        "summary": "Request string queued translation",
        "tags": ["Translation"]
      }
    },
